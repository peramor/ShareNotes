@model ShareNotesV3.Models.Note

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<form method="post" enctype="multipart/form-data" asp-controller="Notes" asp-action="Create">
    <div class="form-horizontal">
        <h4>Note</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="LectureId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="LectureId" class ="form-control" asp-items="ViewBag.LectureId"></select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="StudentId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="StudentId" class ="form-control" asp-items="ViewBag.StudentId"></select>
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label">Select File</label>
            <div class="col-md-8">
                <input name="files" id="files" data-show-upload="false" multiple type="file" class="file file-loading" data-allowed-file-extensions='["jpg", "png"]'>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
