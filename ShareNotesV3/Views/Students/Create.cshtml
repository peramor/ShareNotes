@model ShareNotesV3.Models.Student

@{
    ViewData["Title"] = "Вход";
}

<h2>Вход</h2>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Login">
            <div class="form-horizontal">
                <h4>Авторизация</h4>
                <hr/>
                <div class="form-group">
                    <label asp-for="Mail" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="Mail" class="form-control" />
                        <span asp-validation-for="Mail" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Pwd" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="Pwd" type="password" class="form-control" />
                        <span asp-validation-for="Pwd" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Войти" class="btn btn-default" />
                    </div>
                </div>
            </div>
        </form>
    </div>
    <div class="col-md-6">
        <form asp-action="Create">
            <div class="form-horizontal">
                <h4>Новый пользователь</h4>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="FacultyId" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <select asp-for="FacultyId" class="form-control" asp-items="ViewBag.FacultyId"></select>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="FullName" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="FullName" class="form-control" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Mail" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="Mail" class="form-control" />
                        <span asp-validation-for="Mail" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Pwd" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="Pwd" type="password" class="form-control" />
                        <span asp-validation-for="Pwd" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Зарегистрироваться" class="btn btn-default" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
